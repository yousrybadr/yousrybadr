<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Estsharadoctorandroid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">#00000000</item>
        <item name="colorPrimaryVariant">#00000000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@drawable/shape_gradient_main</item>
        <item name="android:statusBarColor">#00000000</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.Estsharadoctorandroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_gradient_main</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="Theme.Estsharadoctorandroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:windowBackground">@drawable/shape_gradient_main</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="Theme.Estsharadoctorandroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>